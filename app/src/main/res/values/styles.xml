<resources>

	<!-- Base application theme. -->
	<style name="Theme.HappyApp" parent="Theme.MaterialComponents.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/color_primary</item>
		<item name="colorPrimaryDark">@color/color_primary_dark</item>
		<item name="colorAccent">@color/color_accent</item>
	</style>

	<style name="Theme.HappyApp.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar" />

	<style name="Theme.HappyApp.Launcher">
		<item name="android:windowBackground">@drawable/launch_screen</item>
	</style>

	<style name="Widget.HappyApp.Spinner" parent="Widget.AppCompat.Spinner">
		<item name="elevation">13dp</item>
		<item name="background">@drawable/box</item>
	</style>

	<style name="Widget.HappyApp.Seperator.View">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">1.13dp</item>
		<item name="background">@color/black</item>
	</style>

	<style name="Widget.HappyApp.Seperator.TextView" parent="Widget.AppCompat.TextView">
		<item name="android:textAlignment">center</item>
		<item name="android:layout_marginTop">.13dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
	</style>

	<style name="Widget.HappyApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
		<!--<item name="android:paddingBottom">6dp</item>-->
		<item name="android:layout_margin">13dp</item>
		<item name="boxCornerRadiusBottomEnd">.13dp</item>
		<item name="boxCornerRadiusTopStart">.13dp</item>
		<item name="boxCornerRadiusBottomStart">@dimen/text_input_layout_corner_radius</item>
		<item name="boxCornerRadiusTopEnd">@dimen/text_input_layout_corner_radius</item>
	</style>

	<style name="Widget.HappyApp.ContainedButton">
		<item name="cornerRadius">25.13dp</item>
		<item name="backgroundTint">@color/color_primary</item>
		<item name="rippleColor">@color/rippleColor</item>
		<item name="android:layout_margin">@dimen/button_margin_all</item>
		<item name="android:textSize">@dimen/button_text_size</item>
		<item name="android:elevation">0dp</item>
		<item name="android:textColor">@color/white</item>
		<item name="textAllCaps">false</item>
	</style>

	<style name="Widget.HappyApp.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
		<item name="cornerRadius">25.13dp</item>
		<item name="rippleColor">@color/color_primary</item>
		<item name="android:layout_margin">13dp</item>
		<item name="android:textSize">@dimen/button_text_size</item>
		<item name="android:textColor">@color/ripple_color</item>
		<item name="textAllCaps">false</item>
	</style>

	<style name="Widget.HappyApp.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
		<item name="cornerRadius">25.13dp</item>
		<item name="rippleColor">@color/color_primary</item>
		<item name="android:textSize">@dimen/button_text_size</item>
		<item name="android:layout_margin">13dp</item>
		<item name="textAllCaps">false</item>
		<item name="strokeWidth">1.13dp</item>
		<item name="strokeColor">@color/color_primary</item>
		<item name="android:textColor">@color/ripple_color</item>
	</style>

	<style name="Theme.HappyApp.Fragment">
		<item name="background">@color/fragment_background_color</item>
		<item name="elevation">4dp</item>
	</style>

	<style name="Theme.HappyApp.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

	<style name="Theme.HappyApp.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

	<style name="Theme.HappyApp.LinearLayoutBox">
		<item name="android:padding">0dp</item>
		<item name="background">@drawable/box</item>
		<item name="android:orientation">vertical</item>
		<item name="android:layout_marginTop">4dp</item>
		<item name="android:layout_marginBottom">4dp</item>
	</style>


	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/color_primary</item>
		<item name="colorPrimaryDark">@color/color_primary_dark</item>
		<item name="colorAccent">@color/color_accent</item>
	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

	<style name="Widget.HappyApp.Seperator" />

	<style name="Widget.HappyApp" />

	<style name="Widget" />

</resources>
