<resources>
	<!-- Base application theme. -->
	<style name="Theme.HappyApp" parent="Theme.MaterialComponents.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="rippleColor">@color/rippleColor</item>
	</style>
	
	<style name="Theme.HappyApp.Launcher">
		<item name="android:windowBackground">@drawable/launch_screen</item>
	</style>
	
	<style name="Widget.HappyApp.Spinner" parent="Widget.AppCompat.Spinner">
		<item name="elevation">13dp</item>
		<item name="background">@drawable/box</item>
	</style>
	
	<style name="Widget.HappyApp.Seperator.View">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">1.13dp</item>
		<item name="background">@color/black</item>
	</style>
	
	<style name="Widget.HappyApp.Seperator.TextView" parent="Widget.AppCompat.TextView">
		<item name="android:textAlignment">center</item>
		<item name="android:layout_marginTop">.13dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
	</style>
	
	<style name="Widget.HappyApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
		<!--<item name_with_placeholder="android:paddingBottom">6dp</item>-->
		<item name="android:layout_margin">13dp</item>
		<item name="boxCornerRadiusBottomEnd">.13dp</item>
		<item name="boxCornerRadiusTopStart">.13dp</item>
		<item name="boxCornerRadiusBottomStart">@dimen/textInputLayoutCornerRadius</item>
		<item name="boxCornerRadiusTopEnd">@dimen/textInputLayoutCornerRadius</item>
	</style>
	
	<style name="Widget.HappyApp.ContainedButton" parent="Widget.MaterialComponents.Button">
		<item name="cornerRadius">@dimen/buttonStandardCornerRadius</item>
		<item name="backgroundTint">@color/colorPrimary</item>
		<item name="rippleColor">@color/rippleColor</item>
		<item name="android:layout_margin">@dimen/buttonMarginAllSides</item>
		<item name="android:textSize">@dimen/buttonTextSize</item>
		<item name="android:stateListAnimator">@null</item>
		<item name="android:elevation">@dimen/buttonStandardElevation</item>
		<item name="android:textColor">@color/white</item>
		<item name="textAllCaps">false</item>
	</style>
	
	<style name="Widget.HappyApp.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
		<item name="cornerRadius">25.13dp</item>
		<item name="rippleColor">@color/rippleColorAccent</item>
		<item name="android:layout_margin">13dp</item>
		<item name="android:textSize">@dimen/buttonTextSize</item>
		<item name="android:textColor">?attr/colorOnSurface</item>
		<item name="textAllCaps">false</item>
	</style>
	
	<style name="Widget.HappyApp.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
		<item name="cornerRadius">25.13dp</item>
		<item name="rippleColor">@color/rippleColorAccent</item>
		<item name="android:textSize">@dimen/buttonTextSize</item>
		<item name="android:layout_margin">13dp</item>
		<item name="textAllCaps">false</item>
		<item name="strokeWidth">1.13dp</item>
		<item name="strokeColor">@color/colorPrimary</item>
		<item name="android:textColor">?attr/colorOnSurface</item>
	</style>
	
	<style name="Widget.HappyApp.RoundImageButton" parent="Widget.AppCompat.ImageButton">
		<item name="background">@drawable/round_button_background</item>
	</style>
	
	<style name="Theme.HappyApp.Fragment">
		<item name="background">@color/fragmentBackgroundColor</item>
		<item name="elevation">4dp</item>
	</style>
	
	<style name="Theme.HappyApp.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>
	
	<style name="Theme.HappyApp.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>
	
	<style name="Theme.HappyApp.LinearLayoutBox">
		<item name="android:padding">0dp</item>
		<item name="background">@drawable/box</item>
		<item name="android:orientation">vertical</item>
		<item name="android:layout_marginTop">4dp</item>
		<item name="android:layout_marginBottom">4dp</item>
	</style>
	
	<style name="Widget.HappyApp.ProgressBar" parent="Widget.AppCompat.ProgressBar">
		<item name="android:indeterminateTint">@color/colorAccent</item>
	</style>
	
	<style name="Widget.HappyApp.Seperator"/>
	
	<style name="Widget.HappyApp"/>
	
	<style name="Widget"/>
</resources>
