<resources>
	
	<style name="Theme.HappyApp"
	       parent="Theme.MaterialComponents.Light.NoActionBar">
		<item name="colorPrimary">@color/primaryColor</item>
		<item name="colorPrimaryDark">@color/primaryDarkColor</item>
		<item name="colorAccent">@color/secondaryColor</item>
		<item name="rippleColor">@color/ripplePrimaryColor</item>
		<item name="android:fontFamily">@font/lato_regular</item>
		<item name="drawerArrowStyle">@style/Widget.HappyApp.DrawerIconStyle</item>
	</style>
	
	<style name="Theme.HappyApp.Launcher">
		<item name="android:windowBackground">@drawable/launch_screen</item>
	</style>
	
	<style name="Widget.HappyApp.TextInputLayout"
	       parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
		<item name="boxCornerRadiusBottomEnd">.13dp</item>
		<item name="boxCornerRadiusTopStart">.13dp</item>
		<item name="boxCornerRadiusBottomStart">8dp</item>
		<item name="boxCornerRadiusTopEnd">8dp</item>
	</style>
	
	<style name="Widget.HappyApp.ContainedButton"
	       parent="Widget.MaterialComponents.Button">
		<item name="cornerRadius">30dp</item>
		<item name="android:textSize">@dimen/button_text_size_medium</item>
		<item name="backgroundTint">@color/primaryColor</item>
		<item name="rippleColor">@android:color/white</item>
		<item name="drawableTint">@android:color/white</item>
		<item name="android:stateListAnimator">@null</item>
		<item name="android:elevation">8dp</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="textAllCaps">false</item>
	</style>
	
	<style name="Widget.HappyApp.TextButton"
	       parent="Widget.MaterialComponents.Button.TextButton">
		<item name="cornerRadius">25.13dp</item>
		<item name="rippleColor">@color/rippleSecondaryColor</item>
		<item name="android:textSize">@dimen/button_text_size_medium</item>
		<item name="android:textColor">?attr/colorOnSurface</item>
		<item name="textAllCaps">false</item>
	</style>
	
	<style name="Widget.HappyApp.OutlinedButton"
	       parent="Widget.MaterialComponents.Button.OutlinedButton">
		<item name="cornerRadius">25.13dp</item>
		<item name="rippleColor">@color/rippleSecondaryColor</item>
		<item name="android:textSize">@dimen/button_text_size_medium</item>
		<item name="textAllCaps">false</item>
		<item name="strokeWidth">1.13dp</item>
		<item name="strokeColor">@color/primaryColor</item>
		<item name="android:textColor">?attr/colorOnSurface</item>
	</style>
	
	<style name="Theme.HappyApp.Fragment">
		<item name="background">@color/mainFragmentBackgroundColor</item>
		<item name="elevation">4dp</item>
	</style>
	
	<style name="Widget.HappyApp.Toolbar"
	       parent="Widget.MaterialComponents.Toolbar">
		<item name="android:background">@color/primaryColor</item>
		<item name="titleTextColor">@color/primaryTextColor</item>
	</style>
	
	<style name="Widget.HappyApp.DrawerIconStyle"
	       parent="Widget.AppCompat.DrawerArrowToggle">
		<item name="color">@android:color/white</item>
	</style>

</resources>
