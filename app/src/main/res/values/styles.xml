<resources>

	<!-- Base application theme. -->
	<style name="Theme.HappyApp" parent="Theme.MaterialComponents.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/color_primary</item>
		<item name="colorPrimaryDark">@color/color_primary_dark</item>
		<item name="colorAccent">@color/color_accent</item>
		<item name="android:fontFamily">@font/font</item>
	</style>

	<style name="Theme.HappyApp.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar" />

	<style name="Theme.HappyApp.Launcher">
		<item name="android:windowBackground">@drawable/launch_screen</item>
	</style>

	<style name="Widget.HappyApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
		<!--<item name="android:paddingBottom">6dp</item>-->
		<item name="android:layout_margin">13dp</item>
		<item name="boxCornerRadiusBottomEnd">1.3dp</item>
		<item name="boxCornerRadiusTopStart">1.3dp</item>
	</style>

	<style name="Widget.HappyApp.ContainedButton" parent="Widget.MaterialComponents.Button">
		<item name="cornerRadius">4dp</item>
		<item name="backgroundTint">@color/color_primary</item>
		<item name="rippleColor">@color/ripple_color</item>
		<item name="android:layout_margin">13dp</item>
		<item name="android:textSize">13sp</item>
		<item name="android:elevation">13dp</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textAllCaps">true</item>
	</style>

	<style name="Widget.HappyApp.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
		<item name="cornerRadius">4dp</item>
		<item name="rippleColor">@color/color_primary</item>
		<item name="android:layout_margin">13dp</item>
		<item name="android:textSize">13sp</item>
		<item name="android:textColor">@color/ripple_color</item>
		<item name="android:textAllCaps">true</item>
	</style>

	<style name="Widget.HappyApp.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
		<item name="cornerRadius">4dp</item>
		<item name="rippleColor">@color/color_primary</item>
		<item name="android:textSize">13sp</item>
		<item name="android:layout_margin">13dp</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:textColor">@color/ripple_color</item>
	</style>

	<style name="Theme.HappyApp.Fragment">
		<item name="android:background">@color/fragment_background_color</item>
		<item name="android:elevation">4dp</item>
	</style>

	<style name="Theme.HappyApp.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

	<style name="Theme.HappyApp.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

	<style name="Theme.HappyApp.LinearLayoutBox">
		<item name="android:padding">8dp</item>
		<item name="android:background">@drawable/box</item>
		<item name="android:orientation">vertical</item>
		<item name="android:layout_marginTop">4dp</item>
		<item name="android:layout_marginBottom">4dp</item>
	</style>


	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/color_primary</item>
		<item name="colorPrimaryDark">@color/color_primary_dark</item>
		<item name="colorAccent">@color/color_accent</item>
	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
