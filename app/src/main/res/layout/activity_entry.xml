<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/entry_activity_logging_in_waiting_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="gone">

		<ImageView
			android:id="@+id/entry_activity_logging_in_waiting_assistant"
			android:layout_width="100.13dp"
			android:layout_height="100.13dp"
			android:contentDescription="@string/plain_processing_login"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<TextView
			android:id="@+id/entry_activity_logging_in_waiting_assistant_text_view"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/plain_logging_in"
			android:textAlignment="center"
			android:textAppearance="?attr/textAppearanceCaption"
			app:layout_constraintTop_toBottomOf="@+id/entry_activity_logging_in_waiting_assistant" />
	</androidx.constraintlayout.widget.ConstraintLayout>

	<ScrollView
		android:id="@+id/entry_activity_scroll_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent">


		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/entry_activity_constraint_layout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<ImageView
				android:id="@+id/entry_activity_app_logo"
				android:layout_width="@dimen/image_view_app_logo_size"
				android:layout_height="@dimen/image_view_app_logo_size"
				android:layout_marginTop="30dp"
				android:layout_marginBottom="50dp"
				android:contentDescription="@string/plain_happy_app_logo"
				android:src="@drawable/ic_app_logo"
				app:layout_constraintBottom_toTopOf="@+id/entry_activity_login_email_layout"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

			<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/entry_activity_login_email_layout"
				style="@style/Widget.HappyApp.TextInputLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/plain_email"
				app:errorEnabled="true"
				app:layout_constraintBottom_toTopOf="@+id/entry_activity_login_password_layout"
				app:layout_constraintTop_toBottomOf="@+id/entry_activity_app_logo">

				<com.google.android.material.textfield.TextInputEditText
					android:id="@+id/entry_activity_login_email_field"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:imeActionId="0"
					android:imeOptions="actionNext"
					android:inputType="textEmailAddress"
					android:maxLines="1" />
			</com.google.android.material.textfield.TextInputLayout>

			<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/entry_activity_login_password_layout"
				style="@style/Widget.HappyApp.TextInputLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/plain_password"
				app:layout_constraintBottom_toTopOf="@+id/entry_activity_email_login_seperator_view"
				app:errorEnabled="true"
				app:layout_constraintTop_toBottomOf="@id/entry_activity_login_email_layout"
				app:passwordToggleEnabled="true">

				<com.google.android.material.textfield.TextInputEditText
					android:id="@+id/entry_activity_login_password_field"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:imeActionId="1"
					android:imeOptions="actionDone"
					android:inputType="textPassword"
					android:maxLines="1" />
			</com.google.android.material.textfield.TextInputLayout>

			<com.google.android.material.button.MaterialButton
				android:id="@+id/entry_activity_login_login_button"
				style="@style/Widget.HappyApp.ContainedButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/plain_login"
				app:layout_constraintEnd_toEndOf="@+id/entry_activity_login_password_layout"
				app:layout_constraintTop_toBottomOf="@+id/entry_activity_login_password_layout" />

			<LinearLayout
				android:id="@+id/entry_activity_login_waiting_assistant_layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:orientation="horizontal"
				android:visibility="gone"
				app:layout_constraintStart_toStartOf="@+id/entry_activity_login_password_layout"
				app:layout_constraintTop_toBottomOf="@+id/entry_activity_login_password_layout"
				tools:ignore="UseCompoundDrawables">

				<ImageView
					android:id="@+id/entry_activity_login_waiting_assistant"
					android:layout_width="50.13dp"
					android:layout_height="50.13dp"
					android:contentDescription="@string/plain_processing_login" />

				<TextView
					android:id="@+id/entry_activity_login_waiting_assistant_text_view"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/plain_logging_in"
					android:textAppearance="?attr/textAppearanceCaption" />
			</LinearLayout>

			<View
				android:id="@+id/entry_activity_email_login_seperator_view"
				style="@style/Widget.HappyApp.Seperator.View"
				android:layout_marginTop="100.13dp"
				app:layout_constraintBottom_toTopOf="@+id/entry_activity_google_login_seperator_text_view"
				app:layout_constraintTop_toBottomOf="@id/entry_activity_login_password_layout"
				tools:ignore="MissingConstraints" />

			<TextView
				android:id="@+id/entry_activity_google_login_seperator_text_view"
				style="@style/Widget.HappyApp.Seperator.TextView"
				android:text="@string/plain_or_login_using"
				app:layout_constraintTop_toBottomOf="@+id/entry_activity_email_login_seperator_view"
				tools:ignore="MissingConstraints" />

			<com.google.android.material.button.MaterialButton
				android:id="@+id/entry_activity_login_google_button"
				style="@style/Widget.HappyApp.ContainedButton"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/plain_google"
				app:layout_constraintTop_toBottomOf="@id/entry_activity_google_login_seperator_text_view" />

			<View
				android:id="@+id/entry_activity_registration_seperator_view"
				style="@style/Widget.HappyApp.Seperator.View"
				android:layout_marginTop="100.13dp"
				app:layout_constraintTop_toBottomOf="@+id/entry_activity_login_google_button"
				tools:ignore="MissingConstraints" />

			<TextView
				android:id="@+id/entry_activity_registration_seperator_text_view"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="8.13dp"
				android:layout_marginBottom="14.13dp"
				android:text="@string/plain_register_an_account_for_happyapp"
				android:textAlignment="center"
				android:textAppearance="?attr/textAppearanceHeadline5"
				app:layout_constraintBottom_toTopOf="@id/entry_activity_registration_first_name_layout"
				app:layout_constraintTop_toBottomOf="@+id/entry_activity_registration_seperator_view" />

			<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/entry_activity_registration_first_name_layout"
				style="@style/Widget.HappyApp.TextInputLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:errorEnabled="true"
				app:layout_constraintBottom_toTopOf="@+id/entry_activity_registration_family_name_layout"
				app:layout_constraintTop_toBottomOf="@id/entry_activity_registration_seperator_text_view">

				<com.google.android.material.textfield.TextInputEditText
					android:id="@+id/entry_activity_registration_first_name_field"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="@string/plain_first_name"
					android:imeActionId="2"
					android:imeOptions="actionNext"
					android:inputType="text" />
			</com.google.android.material.textfield.TextInputLayout>

			<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/entry_activity_registration_family_name_layout"
				style="@style/Widget.HappyApp.TextInputLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:errorEnabled="true"
				app:layout_constraintBottom_toTopOf="@id/entry_activity_registration_username_layout"
				app:layout_constraintTop_toBottomOf="@id/entry_activity_registration_first_name_layout">

				<com.google.android.material.textfield.TextInputEditText
					android:id="@+id/entry_activity_registration_family_name_field"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="@string/plain_family_name"
					android:imeActionId="3"
					android:imeOptions="actionNext"
					android:inputType="text" />
			</com.google.android.material.textfield.TextInputLayout>

			<TextView
				android:id="@+id/entry_activity_registration_username_info_text_view"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="@string/contraction_displayed_name"
				android:textAppearance="?attr/textAppearanceCaption"
				app:layout_constraintBottom_toTopOf="@+id/entry_activity_registration_username_layout"
				app:layout_constraintEnd_toEndOf="@+id/entry_activity_registration_username_layout"
				app:layout_constraintStart_toStartOf="@+id/entry_activity_registration_username_layout" />

			<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/entry_activity_registration_username_layout"
				style="@style/Widget.HappyApp.TextInputLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:errorEnabled="true"
				app:layout_constraintBottom_toTopOf="@+id/entry_activity_registration_email_layout"
				app:layout_constraintTop_toBottomOf="@+id/entry_activity_registration_family_name_layout">

				<com.google.android.material.textfield.TextInputEditText
					android:id="@+id/entry_activity_registration_username_field"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="@string/plain_username"
					android:imeActionId="4"
					android:imeOptions="actionNext"
					android:inputType="text" />
			</com.google.android.material.textfield.TextInputLayout>

			<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/entry_activity_registration_email_layout"
				style="@style/Widget.HappyApp.TextInputLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:errorEnabled="true"
				app:layout_constraintBottom_toTopOf="@id/entry_activity_registration_password_layout"
				app:layout_constraintTop_toBottomOf="@id/entry_activity_registration_username_layout">

				<com.google.android.material.textfield.TextInputEditText
					android:id="@+id/entry_activity_registration_email_field"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="@string/contraction_registration_email"
					android:imeActionId="5"
					android:imeOptions="actionNext"
					android:inputType="textEmailAddress" />
			</com.google.android.material.textfield.TextInputLayout>

			<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/entry_activity_registration_password_layout"
				style="@style/Widget.HappyApp.TextInputLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:errorEnabled="true"
				app:layout_constraintBottom_toTopOf="@id/entry_activity_registration_date_of_birth_layout"
				app:layout_constraintTop_toBottomOf="@id/entry_activity_registration_email_layout"
				app:passwordToggleEnabled="true">

				<com.google.android.material.textfield.TextInputEditText
					android:id="@+id/entry_activity_registration_password_field"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="@string/contraction_registration_password"
					android:imeActionId="6"
					android:imeOptions="actionNext"
					android:inputType="textPassword" />
			</com.google.android.material.textfield.TextInputLayout>

			<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/entry_activity_registration_date_of_birth_layout"
				style="@style/Widget.HappyApp.TextInputLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:errorEnabled="true"
				app:layout_constraintBottom_toTopOf="@+id/entry_activity_registration_confirm_tc_privacy_policy_checkbox"
				app:layout_constraintTop_toBottomOf="@id/entry_activity_registration_password_layout">

				<com.google.android.material.textfield.TextInputEditText
					android:id="@+id/entry_activity_registration_date_of_birth_field"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="@string/plain_date_of_birth"
					android:imeActionId="7" />
			</com.google.android.material.textfield.TextInputLayout>

			<com.google.android.material.checkbox.MaterialCheckBox
				android:id="@+id/entry_activity_registration_confirm_tc_privacy_policy_checkbox"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/button_margin_all"
				android:layout_marginEnd="@dimen/button_margin_all"
				android:text="@string/contraction_confirm_tc_privacy_policy"
				app:layout_constraintBottom_toTopOf="@+id/entry_activity_subscription_view_pager_caption"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/entry_activity_registration_date_of_birth_layout" />

			<TextView
				android:id="@+id/entry_activity_subscription_view_pager_caption"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="8.13dp"
				android:text="@string/plain_subscribe"
				android:textAlignment="center"
				android:textAppearance="?attr/textAppearanceHeadline5"
				app:layout_constraintBottom_toTopOf="@+id/entry_activity_subscription_logo"
				app:layout_constraintTop_toBottomOf="@+id/entry_activity_registration_confirm_tc_privacy_policy_checkbox" />

			<ImageView
				android:id="@+id/entry_activity_subscription_logo"
				android:layout_width="200.13dp"
				android:layout_height="200.13dp"
				android:contentDescription="@string/plain_happyapp_gold_subscription_logo"
				android:src="@drawable/ic_app_logo"
				app:layout_constraintBottom_toTopOf="@+id/entry_activity_subscription_title"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/entry_activity_subscription_view_pager_caption" />

			<TextView
				android:id="@+id/entry_activity_subscription_title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/plain_happyapp_gold"
				android:textAlignment="center"
				android:textAppearance="?attr/textAppearanceHeadline5"
				android:visibility="invisible"
				app:layout_constraintBottom_toTopOf="@+id/entry_activity_subscription_description_point_1"
				app:layout_constraintTop_toBottomOf="@+id/entry_activity_subscription_logo" />

			<TextView
				android:id="@+id/entry_activity_subscription_description_point_1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/plain_test_first_30_days_for_free"
				android:textAlignment="center"
				android:textAppearance="?attr/textAppearanceHeadline6"
				app:layout_constraintBottom_toTopOf="@+id/entry_activity_subscription_description_point_2"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/entry_activity_subscription_title" />

			<TextView
				android:id="@+id/entry_activity_subscription_description_point_2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/plain_after_that_only"
				android:textAlignment="center"
				android:textAppearance="?attr/textAppearanceHeadline6"
				app:layout_constraintBottom_toTopOf="@+id/entry_activity_subscription_price"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/entry_activity_subscription_description_point_1" />

			<TextView
				android:id="@+id/entry_activity_subscription_price"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/plain_6_99_per_30_days"
				android:textAlignment="center"
				android:textAppearance="?attr/textAppearanceHeadline6"
				app:layout_constraintBottom_toTopOf="@+id/entry_activity_subscription_waiting_assistant_layout"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/entry_activity_subscription_description_point_2" />


			<!--<ImageView-->
			<!--android:id="@+id/entry_activity_subscription_waiting_assistant"-->
			<!--android:layout_width="50.13dp"-->
			<!--android:layout_height="50.13dp"-->
			<!--android:contentDescription="@string/plain_processing_registration"-->
			<!--android:visibility="invisible" />-->

			<LinearLayout
				android:id="@+id/entry_activity_subscription_waiting_assistant_layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:orientation="horizontal"
				android:visibility="invisible"
				app:layout_constraintBottom_toTopOf="@+id/entry_activity_subscription_check_out_button"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				tools:ignore="UseCompoundDrawables">

				<ImageView
					android:id="@+id/entry_activity_subscription_waiting_assistant"
					android:layout_width="50.13dp"
					android:layout_height="50.13dp"
					android:contentDescription="@string/plain_processing_registration" />

				<TextView
					android:id="@+id/entry_activity_subscription_waiting_assistant_text_view"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/plain_processing"
					android:textAppearance="?attr/textAppearanceCaption" />
			</LinearLayout>

			<com.google.android.material.button.MaterialButton
				android:id="@+id/entry_activity_subscription_check_out_button"
				style="@style/Widget.HappyApp.ContainedButton"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/plain_check_out"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/entry_activity_subscription_price" />

			<!--<com.google.android.material.button.MaterialButton-->
			<!--android:id="@+id/entry_activity_registration_button"-->
			<!--style="@style/Widget.HappyApp.ContainedButton"-->
			<!--android:layout_width="match_parent"-->
			<!--android:layout_height="wrap_content"-->
			<!--android:text="@string/plain_register_now"-->
			<!--app:layout_constraintBottom_toBottomOf="parent"-->
			<!--app:layout_constraintTop_toBottomOf="@id/entry_activity_subscription_view_pager" />-->


			<!--<FrameLayout-->
			<!--android:id="@+id/login_container"-->
			<!--android:layout_width="match_parent"-->
			<!--android:layout_height="0dp"-->
			<!--android:layout_weight="1" />-->
		</androidx.constraintlayout.widget.ConstraintLayout>
	</ScrollView>
</FrameLayout>