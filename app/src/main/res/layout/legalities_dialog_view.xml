<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="@dimen/fragment_padding_large">

	<ListView
		android:id="@+id/legalities_list_view"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:layout_marginBottom="8dp"
		android:clickable="false"
		app:layout_constraintBottom_toTopOf="@+id/privacy_policy_dialog_accept_button"
		app:layout_constraintTop_toTopOf="parent"
		tools:layout_editor_absoluteX="8dp">

	</ListView>

	<com.google.android.material.button.MaterialButton
		android:id="@+id/privacy_policy_dialog_accept_button"
		style="@style/Widget.HappyApp.OutlinedButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="end"
		android:layout_marginTop="8dp"
		android:layout_marginEnd="8dp"
		android:text="accept"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/legalities_list_view" />

	<ImageView
		android:id="@+id/privacy_policy_image_view_waiting_assistant"
		android:layout_width="70.13dp"
		android:layout_height="70.13dp"
		android:layout_marginTop="13dp"
		android:contentDescription="TODO"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/privacy_policy_text_view_waiting_assistant_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:text="Loading content..."
		app:layout_constraintTop_toBottomOf="@+id/privacy_policy_image_view_waiting_assistant" />
</androidx.constraintlayout.widget.ConstraintLayout>