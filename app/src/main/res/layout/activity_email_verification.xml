<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
	
	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		
		<TextView
			android:id="@+id/yeetview"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Yeet"
			android:textAlignment="center"
			android:textAppearance="?attr/textAppearanceHeadline5"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintTop_toTopOf="parent"/>
		
		<com.google.android.material.button.MaterialButton
			android:id="@+id/buttong1"
			style="@style/Widget.HappyApp.OutlinedButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Logout"
			app:layout_constraintEnd_toStartOf="@+id/buttong2"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/yeetview"/>
		
		<com.google.android.material.button.MaterialButton
			android:id="@+id/buttong2"
			style="@style/Widget.HappyApp.ContainedButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Send again"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@+id/buttong1"
			app:layout_constraintTop_toBottomOf="@+id/yeetview"/>
	</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>