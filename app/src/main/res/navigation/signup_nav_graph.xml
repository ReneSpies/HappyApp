<?xml version="1.0" encoding="utf-8"?>
<navigation
	xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	xmlns:tools = "http://schemas.android.com/tools"
	android:id = "@+id/signup_nav_graph"
	app:startDestination = "@id/firstNameFragment"
	>
	
	<fragment
		android:id = "@+id/firstNameFragment"
		android:name = "com.aresid.happyapp.signup.FirstNameFragment"
		android:label = "fragment_first_name"
		tools:layout = "@layout/fragment_first_name"
		>
		<action
			android:id = "@+id/to_familyNameFragment"
			app:destination = "@id/familyNameFragment"
			app:enterAnim = "@anim/zoom_in"
			app:exitAnim = "@anim/fade_out"
			app:popEnterAnim = "@anim/fade_in"
			app:popExitAnim = "@anim/zoom_out"
			/>
	</fragment>
	<fragment
		android:id = "@+id/familyNameFragment"
		android:name = "com.aresid.happyapp.signup.FamilyNameFragment"
		android:label = "fragment_family_name"
		tools:layout = "@layout/fragment_family_name"
		>
		<action
			android:id = "@+id/to_usernameFragment"
			app:destination = "@id/usernameFragment"
			app:enterAnim = "@anim/zoom_in"
			app:exitAnim = "@anim/fade_out"
			app:popEnterAnim = "@anim/fade_in"
			app:popExitAnim = "@anim/zoom_out"
			/>
	</fragment>
	<fragment
		android:id = "@+id/usernameFragment"
		android:name = "com.aresid.happyapp.signup.UsernameFragment"
		android:label = "fragment_username"
		tools:layout = "@layout/fragment_username"
		>
		<action
			android:id = "@+id/to_emailFragment"
			app:destination = "@id/emailFragment"
			app:enterAnim = "@anim/zoom_in"
			app:exitAnim = "@anim/fade_out"
			app:popEnterAnim = "@anim/fade_in"
			app:popExitAnim = "@anim/zoom_out"
			/>
	</fragment>
	<fragment
		android:id = "@+id/emailFragment"
		android:name = "com.aresid.happyapp.signup.EmailFragment"
		android:label = "fragment_email"
		tools:layout = "@layout/fragment_email"
		>
		<action
			android:id = "@+id/to_passwordFragment"
			app:destination = "@id/passwordFragment"
			app:enterAnim = "@anim/zoom_in"
			app:exitAnim = "@anim/fade_out"
			app:popEnterAnim = "@anim/fade_in"
			app:popExitAnim = "@anim/zoom_out"
			/>
	</fragment>
	<fragment
		android:id = "@+id/passwordFragment"
		android:name = "com.aresid.happyapp.signup.PasswordFragment"
		android:label = "fragment_password"
		tools:layout = "@layout/fragment_password"
		>
		<action
			android:id = "@+id/to_dateOfBirthFragment"
			app:destination = "@id/dateOfBirthFragment"
			app:enterAnim = "@anim/zoom_in"
			app:exitAnim = "@anim/fade_out"
			app:popEnterAnim = "@anim/fade_in"
			app:popExitAnim = "@anim/zoom_out"
			/>
	</fragment>
	<fragment
		android:id = "@+id/dateOfBirthFragment"
		android:name = "com.aresid.happyapp.signup.DateOfBirthFragment"
		android:label = "fragment_date_of_birth"
		tools:layout = "@layout/fragment_date_of_birth"
		/>
</navigation>